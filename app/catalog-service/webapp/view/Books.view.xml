<mvc:View xmlns:simple="sap.gantt.simple" controllerName="catalogservice.controller.Books"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
  <App id="catalogservice">
    <pages>
      <Page title="Book Details" class="sapUiContentPadding" showHeader="true">
              <headerContent>
          <Button id="refreshButton" text="Refresh" press=".onRefresh" />
        </headerContent>
        <content>
        <Table width="50%" class="centeredTable" id="booksTable" items="{mainService>/Books}">
 <headerToolbar>

         </headerToolbar>
         <headerToolbar>
         <Toolbar>
        <Button text="Add New Book" icon="sap-icon://add" press="onAddRecord"/>
         </Toolbar>
         </headerToolbar>
            <columns>
               <Column id="columnID">
                <header>
                  <Label id="ID" text="ID"/>
                </header>
              </Column>
              <Column id="columnTitle">
                <header>
                  <Label id="Title" text="Title"/>
                </header>
              </Column>
              <Column id="columnStock">
                <header>
                  <Label id="stock" text="Stock"/>
                </header>
              </Column>
              <Column id="columnDelete">
                <header>
                  <Label id="delete" text="Delete"/>
                </header>
              </Column>
            </columns>
            <items>
              <ColumnListItem id="columnListItem" type="Navigation" press=".onRowSelect">
                <cells>
                  <Text id="title-id" text="{mainService>ID}" />
                  <Text id="title-text" text="{mainService>title}" />
                  <Text id="stock-text" text="{mainService>stock}" />
                  <Button icon="sap-icon://delete" press=".onDeleteRecord"/>
                </cells>
              </ColumnListItem>
            </items>
          </Table>
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>
